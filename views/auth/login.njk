{% extends "layout.njk" %}
{% block body %}
    <div class="form-auth-login">
        <h1>Login</h1>
        {% if error.length > 0 %}
            <div class="alert alert-danger" role="alert">
                <ul>
                    {% for message in error %}
                        <li>{{ message }}</li>
                    {% endfor %}
                </ul>
            </div>
        {% endif %}
        <form method="POST" action="/auth/login">
            <div class="mb-3">
                <label class="form-label" for="email">Email address</label>
                <input type="email" class="form-control" id="email" name="email">
            </div>
            <div class="mb-3">
                <label class="form-label" for="password">Password</label>
                <input type="password" class="form-control" id="password" name="password">
            </div>
            <div class="form-check">
                <input type="checkbox" class="form-check-input" id="remember_me" name="remember_me">
                <label class="form-label" class="form-check-label" for="remember_me">Remember me</label>
            </div>
            <div class="d-grid">
                <button type="submit" class="btn btn-lg btn-primary mt-2">Login</button>
            <div>
        </form>
        <div class="d-grid">
            <a class="btn btn-secondary btn-sm mt-2" href="/auth/reset_password">Reset password</a>
        </div>
    </div>
{% endblock %}